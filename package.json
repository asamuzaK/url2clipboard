{
  "name": "url2clipboard",
  "description": "Copy document URL / link URL to clipboard as HTML, Markdown, BBCode, Text, etc.",
  "author": "asamuzaK",
  "homepage": "https://github.com/asamuzaK/url2clipboard",
  "bugs": {
    "url": "https://github.com/asamuzaK/url2clipboard/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/asamuzaK/url2clipboard.git"
  },
  "license": "MPL-2.0",
  "type": "module",
  "scripts": {
    "bundle": "npm-run-all -s bundle:*",
    "bundle:compat": "node index compat",
    "bundle:copy": "copyfiles --up=1 src/LICENSE src/_locales/**/*.json src/css/*.css src/html/*.html src/img/*.* src/lib/*.* src/mjs/*.js bundle",
    "lint": "npm-run-all -s lint:*",
    "lint:addons-linter": "addons-linter src",
    "lint:eslint": "eslint --fix .",
    "lint:html": "html-validate src/html/*.html",
    "lint:style": "stylelint --fix src/css/*.css",
    "test": "npm run test:central",
    "test:beta": "c8 --reporter=text mocha test/*.test.js --require test/mocha/setup.js --channel=beta --exit",
    "test:central": "c8 --reporter=text mocha test/*.test.js --require test/mocha/setup.js --channel=central --exit",
    "test:esr": "c8 --reporter=text mocha test/*.test.js --require test/mocha/setup.js --channel=esr --exit",
    "test:release": "c8 --reporter=text mocha test/*.test.js --require test/mocha/setup.js --channel=release --exit",
    "test_all": "npm-run-all -s test:*"
  },
  "dependencies": {
    "commander": "^8.3.0"
  },
  "devDependencies": {
    "addons-linter": "^4.4.0",
    "c8": "^7.10.0",
    "chai": "^4.3.4",
    "copyfiles": "^2.4.1",
    "eslint": "^7.32.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jsdoc": "^37.1.0",
    "eslint-plugin-no-unsanitized": "^4.0.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.2.0",
    "html-validate": "^6.1.3",
    "jsdom": "^19.0.0",
    "mocha": "^9.1.3",
    "npm-run-all": "^4.1.5",
    "sinon": "^12.0.1",
    "stylelint": "^14.1.0",
    "stylelint-config-standard": "^24.0.0",
    "webext-schema": "^2.0.4",
    "webextension-polyfill": "^0.8.0"
  },
  "version": "7.0.6"
}
