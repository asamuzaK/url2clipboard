{
  "env": {
    "browser": true,
    "node": true,
    "webextensions": true,
    "es6": true
  },
  "extends": [
    "plugin:jsdoc/recommended",
    "plugin:no-unsanitized/DOM",
    "standard"
  ],
  "globals": {
    "ClipboardItem": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "reportUnusedDisableDirectives": true,
  "rules": {
    "no-await-in-loop": "error",
    "no-use-before-define": ["error", {
      "functions": true,
      "classes": true,
      "variables": true,
      "allowNamedExports": false
    }],
    "semi": ["error", "always"],
    "space-before-function-paren": ["error", {
      "anonymous": "always",
      "asyncArrow": "always",
      "named": "never"
    }]
  }
}
