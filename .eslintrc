{
  "env": {
    "browser": true,
    "node": true,
    "webextensions": true,
    "es6": true
  },
  "extends": [
    "plugin:jsdoc/recommended",
    "plugin:no-unsanitized/DOM",
    "standard"
  ],
  "globals": {
    "ClipboardItem": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "reportUnusedDisableDirectives": true,
  "rules": {
    "semi": ["error", "always"],
    "space-before-function-paren": ["error", {
      "anonymous": "always",
      "asyncArrow": "always",
      "named": "never"
    }]
  }
}
